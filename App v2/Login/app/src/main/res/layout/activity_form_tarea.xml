<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.ideapad.login.Form_tarea">

<Button
    android:id="@+id/btn_guardar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Guardar"
    android:layout_above="@+id/btn_cancelar"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:id="@+id/tarea_lb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:text=" "
    android:textSize="30dp" />

<TextView
    android:id="@+id/observacion_lb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/tarea_lb"
    android:layout_marginTop="15dp"
    android:text=" "
    android:textSize="30dp"
    android:layout_alignParentLeft="true" />

<AutoCompleteTextView
    android:id="@+id/n_fruto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/t_fruto"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="17dp"
    android:hint="Numero de frutos"
    android:inputType="numberDecimal"
    android:maxLines="1"
    android:singleLine="true"
    android:layout_alignParentLeft="true" />

<AutoCompleteTextView
    android:id="@+id/t_fruto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:hint="TamaÃ±o de frutos"
    android:inputType="numberDecimal"
    android:maxLines="1"
    android:singleLine="true"
    android:layout_alignParentLeft="true" />


<Button
    android:id="@+id/btn_cancelar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancelar"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>
